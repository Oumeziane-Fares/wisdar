{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true // Usually true for tsconfig.node.json as it's for type checking Node scripts
  },
  "include": ["vite.config.ts", "tailwind.config.js", "postcss.config.js"] // Include your config files
}